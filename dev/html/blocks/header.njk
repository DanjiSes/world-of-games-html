{%set menu = [
  {"t": "Комплектация", "l": "#kmplektaciya"},
  {"t": "Отзывы", "l": "#otzivy"},
  {"t": "Гарантия", "l": "#garantiya"}
]%}

{# 
  {"t": "Как снять боль?", "l": "#"}
  {"t": "Контакты", "l": "#"}
#}

{%set phone = { "t": "8 800 700 37 79", "l": "88007003779" } %}

<header class="header">
  <div class="container-fluid py-2 d-flex align-items-center justify-content-between">

    {# Logo #}
    <div class="logo">
      <img src="static/images/logo.png" alt="DREV MASS">
      <strong class="font-weight-normal" style="max-width: 230px;">
        Производим медицинские
        массажеры для спины с 2012 года.
        Продаем и доставляем по всему миру
      </strong>
    </div>

    {# Nav #}
    <nav class="nav d-none d-lg-block">
      <ul class="list-unstyled">
        {% for l in menu %}
          <li><a class="js-scrollTo" href="{{ l.l }}">{{ l.t }}</a></li>
        {% endfor %}
      </ul>
    </nav>

    <div class="px-3 d-flex align-items-center">
      {# Cta btn #}
      <a href="#callBackModal" data-toggle="modal" class="d-none d-lg-block btn text-white bg-info rounded-pill py-2 px-3 mr-4 text-nowrap">
        Подберем вам массажер
      </a>
      {# Phone #}
      <div class="phone d-none d-lg-block text-nowrap">
        <a href="tel:{{ phone.l }}"
          class="text-dark font-weight-bold">
          {{ phone.t }}
        </a>
        <small class="d-block">Работаем с 09:00 до 21:00 по МСК</small>
      </div>

      <a href="#menu" class="d-lg-none">
        <svg width="33" height="21" viewBox="0 0 33 21" fill="none" xmlns="http://www.w3.org/2000/svg">
          <line y1="1" x2="32.9333" y2="1" stroke="black" stroke-width="2"/>
          <line y1="9.8667" x2="32.9333" y2="9.8667" stroke="black" stroke-width="2"/>
          <line y1="18.7334" x2="32.9333" y2="18.7334" stroke="black" stroke-width="2"/>
          <rect y="10.8667" width="32.9333" height="1.26667" fill="#C4C4C4"/>
          <rect y="19.7334" width="32.9333" height="1.26667" fill="#C4C4C4"/>
          <rect y="2" width="32.9333" height="1.26667" fill="#C4C4C4"/>
        </svg>
      </a>

    </div>
  
  </div>
</header>

<div class="mobile-nav d-flex flex-column justify-content-between py-4 px-5" id="menu">
  <a href="#close" class="close">
    <svg width="46" height="46" viewBox="0 0 46 46" fill="none" xmlns="http://www.w3.org/2000/svg">
