      <rect x="22.8076" y="21.0532" width="14.8869" height="1.24057" transform="rotate(-135 22.8076 21.0532)" fill="#C4C4C4"/>
      <rect x="12.281" y="35.0884" width="14.8869" height="1.24057" transform="rotate(-45 12.281 35.0884)" fill="#C4C4C4"/>
    </svg>

  </a>
  <div>
    {# Logo #}
    <div class="logo mb-5">
      <img src="static/images/logo.png" alt="DREV MASS">
    </div>

    {# Nav #}
    <nav class="nav mb-4">
      <ul class="list-unstyled flex-column">
        {% for l in menu %}
          <li><a class="js-scrollTo" href="{{ l.l }}">{{ l.t }}</a></li>
        {% endfor %}
      </ul>
    </nav>
  </div>

  <div>
    {# Phone #}
    <a href="tel:{{ phone.l }}"
      class="phone text-dark font-weight-bold">
      {{ phone.t }}
    </a>
    <small class="d-block">Работаем с 09:00 до 21:00 по МСК</small>
    {# Cta btn #}
    <a href="#callBackModal" data-toggle="modal" class="d-block w-100 btn text-white bg-info rounded-pill py-2 px-3 mt-4 text-nowrap">
      Подберем вам массажер
    </a>
